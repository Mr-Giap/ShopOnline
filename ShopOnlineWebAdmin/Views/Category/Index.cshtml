<h1>Đây là bảng Category </h1>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Quản lý danh mục sản phẩm</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Tìm kiếm">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên</th>
                            <th>Thứ tự hiển thị</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <!-- Dùng js bên dưới để add  -->
                        </tr>

                    </tbody>
                </table>
            </div>
            <!-- /.card-body --> 
            <!--Phan trang -->
            <div class="card-footer clearfix">
                <div class="pagination pagination-sm m-0 float-left">
                    <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                        <select id="ddlShowPage">
                            <option value="5" selected="selected">5</option>
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="50">50</option>
                        </select>
                        <span class="item-per-page">
                            bản ghi/trang.
                        </span>
                        Tổng số bản ghi: <strong id="lblTotalRecords"></strong>
                    </div>
                </div>
                <div class="pagination pagination-sm m-0 float-right">
                    <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                        <ul id="paginationUL"></ul>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.card -->
    </div>
</div>

<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{Id}}</td>
        <td>{{Name}}</td>
        <td>{{DisplayOrder}}</td>
        <td>{{{IsShow}}}</td>
             <td>
                <a href="javascript:void(0);" data-id="{{Id}}" titil="Sửa" class="btn-edit"><i class="fa fa-pencil-square-o"></i></a>
                <a href="javascript:void(0);" data-id="{{Id}}" titil="Xóa" class="btn-delete"><i class="fa fa-trash-o"></i></a>
            </td>
    </tr>
</script>
